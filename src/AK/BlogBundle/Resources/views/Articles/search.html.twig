<body>

    {{ form(form) }}

    {% if posts != null %}
        <table border>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Body</th>
                    <th>Slug</th>
                    <th>isPublished</th>
                </tr>
            </thead>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.body }}</td>
                    <td>{{ post.slug }}</td>
                    <td>{{ post.isPublished ? 1 : 0 }}</td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}
</body>
